# Development Dockerfile with hot-reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source
COPY tsconfig.json ./
COPY src ./src

# Development environment
ENV NODE_ENV=development
ENV PORT=5000

EXPOSE 5000

# Run with nodemon for hot-reload
CMD ["npm", "run", "dev"]
